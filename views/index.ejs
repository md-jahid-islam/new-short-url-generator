<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Short URL Maker</title>
    <link rel="stylesheet" href="../public/css/style.css">

</head>
<body>
    <nav>
        <ul>
            <li><a href="#">Short URL</a></li>
            <li><a href="#">Login</a></li>
            <li><a href="#">Registrations</a></li>
        </ul>
        <button class="theme-toggle">dark</button>
    </nav>

    <div class="container">
        <h1 class="undelin">Short URL Maker</h1>
        <div class="url-input">
            <input class="long-url" type="text" placeholder="Paste your long URL here">
            <button>Generate</button>
        </div>
        <div class="short-link">
            <p>Your Short Link:</p>
            <div class="link">
                <a href="#">shorturl/example</a>
                <button class="copy">Copy</button>
            </div>
        </div>
        <button class="new-generate">New Create Generate</button>
    </div>

    <footer>
        &copy; 2025 Short URL Maker. All Rights Reserved!
    </footer>

    <script>
        const themeToggle = document.querySelector('.theme-toggle');
        const body = document.body;

        themeToggle.addEventListener('click', () => {
            body.classList.toggle('dark');
        });

        const copyBtn = document.querySelector('.copy');
        const shortLink = document.querySelector('.short-link a');

        copyBtn.addEventListener('click', () => {
            navigator.clipboard.writeText(shortLink.textContent).then(() => {
                alert('Short URL copied to clipboard!');
            });
        });
    </script>
</body>
</html>
